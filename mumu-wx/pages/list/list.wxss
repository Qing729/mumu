/* pages/list/list.wxss */
.top {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 60rpx;
  text-align: center;
  background-color: #f4f4f4;
}
.top .top-text {
  position: relative;
  display: inline-block;
  max-width: 100%;
  font-size: 28rpx;
}
.top .top-text::before {
  position: absolute;
  display: block;
  width: 32rpx;
  height: 2rpx;
  top: 44rpx;
  background-color: #e5e5e5;
  content: '';
  left: -60rpx;
}
.top .top-text::after {
  position: absolute;
  display: block;
  width: 32rpx;
  height: 2rpx;
  top: 44rpx;
  background-color: #e5e5e5;
  content: '';
  right: -60rpx;
}
.scroll-wrapper {
  background-color: #f4f4f4;
  font-size: 24rpx;
}
.goods-list {
  display: -webkit-flex;
  display: flex;
  padding: 0 10rpx;
}
.left,
.right {
  width: 50%;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.item-box {
  width: 100%;
  background-color: #fff;
  margin: 20rpx 0;
}
.item-img {
  display: block;
  width: 100%;
  height: auto;
}
.item-title {
  color: #333;
  margin: 20rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-price {
  padding: 10rpx 10rpx 20rpx;
  color: #ff4444;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
